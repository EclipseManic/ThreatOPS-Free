{
  "index_patterns": ["threatops-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "refresh_interval": "5s",
      "analysis": {
        "analyzer": {
          "threat_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": ["lowercase", "stop"]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "timestamp": {
          "type": "date"
        },
        "log_type": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        },
        "host": {
          "type": "keyword"
        },
        "hostname": {
          "type": "keyword"
        },
        "user": {
          "type": "keyword"
        },
        "source_ip": {
          "type": "ip"
        },
        "destination_ip": {
          "type": "ip"
        },
        "ip": {
          "type": "ip"
        },
        "event_id": {
          "type": "long"
        },
        "event_type": {
          "type": "keyword"
        },
        "severity": {
          "type": "keyword"
        },
        "message": {
          "type": "text",
          "analyzer": "threat_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "process_name": {
          "type": "keyword"
        },
        "command_line": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 1024
            }
          }
        },
        "mitre_technique": {
          "type": "keyword"
        },
        "alert_name": {
          "type": "keyword"
        },
        "alert_severity": {
          "type": "keyword"
        },
        "confidence": {
          "type": "float"
        },
        "tags": {
          "type": "keyword"
        },
        "extracted_ips": {
          "type": "ip"
        },
        "extracted_domains": {
          "type": "keyword"
        },
        "threat_intel": {
          "properties": {
            "ioc": {
              "type": "keyword"
            },
            "ioc_type": {
              "type": "keyword"
            },
            "reputation": {
              "type": "keyword"
            },
            "confidence": {
              "type": "float"
            },
            "source": {
              "type": "keyword"
            }
          }
        },
        "raw_data": {
          "type": "object",
          "enabled": true
        },
        "source": {
          "type": "keyword"
        },
        "destination_port": {
          "type": "long"
        },
        "protocol": {
          "type": "keyword"
        },
        "action": {
          "type": "keyword"
        },
        "result": {
          "type": "keyword"
        },
        "geo": {
          "properties": {
            "country_code": {
              "type": "keyword"
            },
            "location": {
              "type": "geo_point"
            }
          }
        }
      }
    }
  },
  "priority": 100,
  "version": 1,
  "_meta": {
    "description": "ThreatOps SOC log index template for security event analysis"
  }
}

